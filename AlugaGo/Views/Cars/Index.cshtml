@model  List<AlugaGo.Models.Car>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Detalhes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var listCar in Model.ToList())
        {
            <tr>
                <td>@listCar.Id</td>
                <td>@listCar.Name</td>
                <td>@Html.ActionLink("More", "Details", new { @listCar.Id })</td>
            </tr>
        }   

    </tbody>
</table>