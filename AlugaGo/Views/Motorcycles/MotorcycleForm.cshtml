@model  AlugaGo.ViewModels.MotorcycleFormViewModel

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Motorcycles"))
{
    @Html.HiddenFor(m => m.Motorcycle.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Motorcycle.Name)
        @Html.TextBoxFor(m => m.Motorcycle.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Motorcycle.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Motorcycle.Fabricante)
        @Html.TextBoxFor(m => m.Motorcycle.Fabricante, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Motorcycle.Fabricante)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Motorcycle.CylinderCapacity)
        @Html.TextBoxFor(m => m.Motorcycle.CylinderCapacity, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Motorcycle.CylinderCapacity)
    </div>
    <button type="submit" class=" btn btn-primary">Salvar</button>
}